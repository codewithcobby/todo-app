{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build:client": "next build --project tsconfig.client.json",
    "dev:client": "next dev",
    "build:server": "tsc && TS_NODE_BASEURL=./build node -r tsconfig-paths/register ./build/index.js",
    "start:server": "npx knex migrate:latest --env production --knexfile src/server/build/config/db/knexfile.js && node -r tsconfig-paths/register src/index.ts",
    "dev:server": "npx knex migrate:latest --env development --knexfile src/server/config/db/knexfile.ts && nodemon -r tsconfig-paths/register  src/server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "dev": "npm run dev:client && npm run dev:server",
    "test:server": "tsc"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.374.0",
    "@headlessui/react": "^2.1.2",
    "@heroicons/react": "^2.1.5",
    "@tanstack/react-query": "latest",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "knex": "^3.1.0",
    "multer": "^1.4.5-lts.1",
    "next": "14.2.5",
    "nodemailer": "^6.9.4",
    "nodemon": "^3.0.1",
    "pg": "^8.8.0",
    "react": "^18",
    "react-dom": "^18",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.8",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  }
}
